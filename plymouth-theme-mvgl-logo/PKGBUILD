# Maintainer: Hayate Nakamura <is01.njb at gmail dot com>

pkgname=plymouth-theme-mvgl-logo
_themename=mvgl-logo

pkgver=1.0
pkgrel=1
pkgdesc="A plymouth theme for Moevalent GNU/Linux"
arch=('any')
url=https://osdn.net/projects/univalentgnulinux
_url=https://osdn.net/projects/univalentgnulinux/storage/aur/plymouth-theme-mvgl-logo
license=('GPL')
depends=('plymouth')
optdepends=()
source=("${_url}/${pkgname}-${pkgver}.tar.gz")
sha512sums=('2105ec071f2a13adf77e822d73e79db2ae09d6f7005e2e090ea056638d11e3eb1caaad46a91e4ae04cfead95151e3d9700199b377e647afdde831f2d3a24d57f')
conflicts=("${pkgname}-git")


build () {
    cd "${srcdir}"
    mkdir -p usr/share/plymouth/themes/${_themename}/
    cp -r ${pkgname}/${_themename}/misc/* usr/share/plymouth/themes/${_themename}/
    rm -rf ${_themename}
}

package() {
    mkdir -p "$pkgdir"
    cp -r usr "$pkgdir"
}
