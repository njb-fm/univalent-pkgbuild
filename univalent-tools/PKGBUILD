# Maintainer: Hayate Nakamura <is01.njb at gmail dot com>

pkgname=univalent-tools
pkgver=1.3
pkgrel=1
pkgdesc='System setting tools written in bash, inspired by Alter Linux i3wm'
arch=('any')
url='https://github.com/Jin-Asanami/univalent-tools'
license=('GPL3')
depends=('arandr' 'networkmanager' 'ntp' 'alsa-utils')
optdepends=('unifetch: show system info'
            'univalent-logo: univalent icon'
              )
checkdepends=('shellcheck')

conflicts=("${pkgname}")
source=("${url}/archive/refs/tags/${pkgver}.tar.gz")
sha512sums=('ddadf8f1780c521e8c89ac57a58d2f65c2248000895cf824b5f9a3848f95533f94a6ea98cb73eb4784fd19fca8c2fc33388794b226d2c5c4cdf5853cd04e963d')

package() {
  cd "${srcdir}/${pkgname}-${pkgver}/"
  make DESTDIR="$pkgdir" install
}
