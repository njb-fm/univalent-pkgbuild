# Maintainer: Hayate Nakamura <is01.njb at gmail dot com>

pkgname=univalent-tools
pkgver=1.1
pkgrel=3
pkgdesc='System setting tools written in bash, inspired by Alter Linux i3wm'
arch=('any')
url='https://github.com/Jin-Asanami'
license=('GPL3')
depends=('arandr' 'networkmanager' 'ntp' 'pavucontrol')
optdepends=('unifetch: show system info'
            'univalent-logo: univalent icon'
              )
makedepends=('git')
checkdepends=('shellcheck')

conflicts=("${pkgname}")
source=("${pkgname}::git+${url}/${pkgname}.git")
sha512sums=('SKIP')

package() {
	install -dm755 ${pkgdir}${destname}
	cp -r ${srcdir}/${pkgname}${destname}/usr ${pkgdir}${destname}
}
