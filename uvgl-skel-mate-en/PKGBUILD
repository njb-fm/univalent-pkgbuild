# Maintainer: Hayate Nakamura (is01.njb at gmail dot com)
pkgname=("uvgl-skel-mate-en")
_pkgname=("uvgl-skel")
destname="/etc"
pkgver=23.03
pkgrel=3.2
pkgdesc="Settings for Munivalent GNU/Linux"
arch=('any')
url="https://github.com/jin-asanami/uvgl-skel"
license=('GPL3')

depends=('mate-terminal' 'caja')

optdepends=('yay: an AUR helper'
            'unifetch: screenfetch utility'
            'cups: printing support'
            'system-config-printer: CUPS status applet')
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)
source=("${_pkgname}-${pkgver}.tar.gz::${url}/archive/refs/tags/v${pkgver}.tar.gz"
	"user"
	"applications.list")
sha256sums=('75f36f4c6f8a3707d3539561362815246bf310cc09166a47705d98ed1f6a3bdb'
	'8e8ef80f7d843e6182b7aa5b721fccfd5e69db575fc57770ac67fd1a90d20ede'
	'70d930d69d2720b16d534f7eeae220ca3d5f57791f258bd21a4c88756baa0fc7')

package() {
	install -dm755 ${pkgdir}${destname}
	cp -r ${srcdir}/${_pkgname}-${pkgver}/mate/en${destname}/* ${pkgdir}${destname}
	cp -f ${srcdir}/user ${pkgdir}${destname}/skel/.config/dconf/
	mkdir -p ${pkgdir}${destname}/skel/.config/mate-menu
	cp -f ${srcdir}/applications.list ${pkgdir}${destname}/skel/.config/mate-menu
}
