# Maintainer: Hayate Nakamura (is01.njb at gmail dot com)
pkgname=("uve-skel-cinnamon")
_pkgname=("uve-skel")
pkgver=23.07
pkgrel=1
pkgdesc="Settings for Cunivalent Versatile Environment"
arch=('any')
url="https://github.com/njb-fm/uve-skel"
license=('GPL3')
provides=('uve-skel')
conflicts=('uve-skel')
replaces=('uvgl-skel-cinnamon' 'uvgl-skel-cinnamon-ja' 'uvgl-skel-cinnamon-en')
depends=('gnome-terminal' 'nemo')
optdepends=('yay: an AUR helper'
            'neofetch: screenfetch utility'
            'cups: printing support'
            'system-config-printer: CUPS status applet')
options=(!strip !emptydirs)
source=(${_pkgname}-${pkgver}.tar.gz::${url}/archive/refs/tags/v${pkgver}.tar.gz)
md5sums=('906c857ff896b779690c41437a8b8ee2')

package() {
	install -dm755 ${pkgdir}/etc
	cp -r ${srcdir}/${_pkgname}-${pkgver}/cinnamon/etc/* ${pkgdir}/etc
}
