# Maintainer: Hayate Nakamura (is01.njb at gmail dot com)
pkgname=("uve-skel-xfce")
_pkgname=("uve-skel")
pkgver=23.07
pkgrel=1
pkgdesc="Settings for Xunivalent Versatile Environment"
arch=('any')
url="https://github.com/njb-fm/uve-skel"
license=('GPL3')
makedepends=('git')
provides=('uve-skel')
conflicts=('uve-skel')
replaces=('uvgl-skel-xfce' uvgl-skel-xfce-ja' 'uvgl-skel-xfce-en')
depends=('xfce4-terminal' 'thunar')
optdepends=('yay: an AUR helper'
            'neofetch: screenfetch utility'
            'cups: printing support'
            'system-config-printer: CUPS status applet')
options=(!strip !emptydirs)
source=(${_pkgname}-${pkgver}.tar.gz::${url}/archive/refs/tags/v${pkgver}.tar.gz)
md5sums=('906c857ff896b779690c41437a8b8ee2')

package() {
	install -dm755 ${pkgdir}/etc
	cp -r ${srcdir}/${_pkgname}-${pkgver}/xfce/etc/* ${pkgdir}/etc
}
