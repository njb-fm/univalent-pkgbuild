# Maintainer: Hayate Nakamura <is01.njb at gmail dot com>
pkgname=univalent-logo
pkgver=23.06
pkgrel=2
pkgdesc="UVE's Logo"
arch=('any')
url="https://github.com/njb-fm/univalent-logo"
license=('custom:njb-media')
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${pkgname}-${pkgver}.tar.gz::${url}/archive/refs/tags/${pkgver}.tar.gz)
md5sums=('c6300b6ed9aa6e524196831b37bf0200')

package() {
	cd ${srcdir}/${pkgname}-${pkgver}
	cp -r usr ${pkgdir}
	mkdir -p ${pkgdir}/usr/share/licenses/${pkgname}
	install -Dm644 ${srcdir}/${pkgname}-${pkgver}/LICENSE.md ${pkgdir}/usr/share/licenses/
}
