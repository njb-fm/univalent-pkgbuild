# Maintainer: Hayate Nakamura <is01.njb at gmail dot com>

pkgname=anthy-ut
pkgver=9100h_20110409ut
pkgrel=1
_pkgname=${pkgname/-ut/}
_pkgver=${pkgver/_/-}
pkgdesc="Dictionaries and patches for G-HAL's Anthy"
arch=('i686' 'x86_64')
url="http://www.geocities.jp/ep3797/anthy_dict_01.html"
license=('LGPL2.1' 'GPL2' 'BSD')
depends=('gcc-libs')
makedepends=('emacs')
provides=("anthy=${pkgver%_*}")
conflicts=('anthy')
options=('!libtool')
source=(${_pkgname}-${_pkgver}.tar.bz2::http://ppa.launchpad.net/kakurasan/stable/ubuntu/pool/main/a/anthy/${_pkgname}_${_pkgver}.orig.tar.bz2)
md5sums=('edbdfb57dce92a072685737fe6478174')

build() {
  cd ${srcdir}/${_pkgname}-${_pkgver}

  ./configure --prefix=/usr --sysconfdir=/etc
  make EMACS=emacs
}

package() {
  cd ${srcdir}/${_pkgname}-${_pkgver}

  make EMACS=emacs DESTDIR=${pkgdir} install
  install -D -m644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}

