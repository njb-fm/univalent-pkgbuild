_pkgname=test-moepink
pkgname=moe-pink-lxqt-theme
pkgver=1.0
pkgrel=2
pkgdesc="Moe Pink theme for the LXQt Desktop"
arch=('any')
_url="https://osdn.net/projects/univalentgnulinux/storage/aur/moepink"
url="https://moebuntu.web.fc2.com/"
license=('GPL3')
depends=('lxqt-panel')
provides=("${pkgname}=${pkgver}")
source=("${_url}/Test-MoePink.tar.gz")
md5sums=('8115da9ac365b030bab775a6d644434e')

package() {
	cd ${srcdir}/Test-MoePink
  install -dm 755 "${pkgdir}"/usr/share/lxqt/themes/Test-MoePink
  cp -a --no-preserve='ownership' * "${pkgdir}"/usr/share/lxqt/themes/Test-MoePink
}
