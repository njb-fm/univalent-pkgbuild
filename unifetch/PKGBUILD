pkgname=unifetch
pkgver=1.0.1
pkgrel=1
pkgdesc="An unofficial fork of neofetch."
arch=('any')
url="https://osdn.net/projects/univalentgnulinux/"
license=('MIT')
depends=('bash')
makedepends=('git')
checkdepends=('shellcheck')
conflicts=("${pkgname}")
source=("${url}/downloads/77849/${pkgname}-${pkgver}.tar.gz")
sha512sums=('6279abea39820a6e58b9d1263a1abb34781f503485e4b61bd19d86ac5c33f9feb0f977458407b5895281f5a85d7a305feced78828fd8164dc83e625b961594ef')

package() {
  cd "${srcdir}/${pkgname}-${pkgver}/"
  make DESTDIR="$pkgdir" install
  install -D -m644 LICENSE.md "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE.md"
}
