pkgname=unifetch
pkgver=1.0.1
pkgrel=1
pkgdesc="An unofficial fork of neofetch."
arch=('any')
url="https://osdn.net/projects/univalentgnulinux/"
license=('MIT')
depends=('bash')
makedepends=('git')
checkdepends=('shellcheck')
conflicts=("${pkgname}")
source=("${url}/downloads/77849/${pkgname}-${pkgver}.tar.gz")
sha512sums=('12029d4da9754f68ce22758e017a589e96adc8c1874536714049ca8e13534be3b004282dcbcaa8cb7f17e23f6d394795ae4ce41782bae95c4eeec814eb047f8b')

package() {
  cd "${srcdir}/${pkgname}-${pkgver}/"
  make DESTDIR="$pkgdir" install
  install -D -m644 LICENSE.md "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE.md"
}
