# Maintainer: Hayate Nakamura (is01.njb at gmail dot com)pkgname=yaru
pkgname=moe-pink-icons
pkgver=170531
pkgrel=1
pkgdesc="Moe default moebuntu icon theme"
arch=(any)
_url="https://osdn.net/projects/univalentgnulinux/storage/aur/moepink"
url="https://moebuntu.web.fc2.com/"
license=('GPL3')

optdepends=('moe-pink-bh-gtk-theme: Moe Pink GTK themes with big heart'
            'moe-pink-bh-lxqt-theme: Moe Pink LXQt themes'
              )

source=("${_url}/MoePinkIcons_${pkgver}.tar.gz")
sha256sums=('76ea157e58a31709b15449f248405a96ed3634cb48a5af872a523f5eee594192')

package() {
	cd ${srcdir}/MoePinkIcons
  install -dm755 "${pkgdir}/usr/share/icons/MoePinkIcons"
  rm -f "${pkgdir}/usr/share/icons/MoePinkIcons/icon-theme.cache"
}
