# Maintainer: Hayate Nakamura (is01.njb at gmail dot com)pkgname=yaru
pkgname=moe-pink-icons
pkgver=201117
pkgrel=1
pkgdesc="Moe default icon theme"
arch=(any)
_url="https://osdn.net/projects/univalentgnulinux/storage/aur/moepink"
url="https://moebuntu.web.fc2.com/"
license=('GPL3')

optdepends=('moe-pink-gtk-theme: Moe Pink moebuntu themes'
            'moe-pink-lxqt-theme: Moe Pink LXQt themes'
              )
source=("${_url}/MoePinkIcons_${pkgver}.tar.xz")
sha256sums=('5d35d7a6bc7aa0c1aa708fc71f58a1ee8d358f51ceef5da6eab935a4c6c42e5d')

package() {
	cd ${srcdir}/MoePinkIcons
	mkdir ${pkgdir}/usr
	mkdir ${pkgdir}/usr/share
	mkdir ${pkgdir}/usr/share/icons
	mkdir ${pkgdir}/usr/share/icons/MoePinkIcons
	cp -r * "${pkgdir}/usr/share/icons/MoePinkIcons"
}
