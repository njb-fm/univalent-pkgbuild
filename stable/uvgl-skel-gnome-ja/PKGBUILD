# Maintainer: Hayate Nakamura (is01.njb at gmail dot com)
pkgname=("uvgl-skel-gnome-ja")
_pkgname=("uvgl-skel")
destname="/etc"
pkgver=23.05
pkgrel=1
pkgdesc="Settings for Gunivalent GNU/Linux"
arch=('any')
url="https://github.com/njb-fm/uvgl-skel"
license=('GPL3')

depends=('gnome-terminal' 'nautilus')

optdepends=('yay: an AUR helper'
            'unifetch: screenfetch utility'
            'cups: printing support'
            'system-config-printer: CUPS status applet')
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)
source=("${_pkgname}-${pkgver}.tar.gz::${url}/archive/refs/tags/v${pkgver}.tar.gz")
sha256sums=('87a06113bb0b77e39bf42cd39d4faa4bd0329aefa52ee6d4560b8e089f6d17e5')

package() {
	install -dm755 ${pkgdir}${destname}
	cp -r ${srcdir}/${_pkgname}-${pkgver}/gnome/ja${destname}/* ${pkgdir}${destname}
}
