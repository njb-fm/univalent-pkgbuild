pkgname=univalent-tools
pkgver=3.1
pkgrel=1
pkgdesc='System setting tools written in bash & whiptail'
arch=('any')
url='https://github.com/njb-fm/univalent-tools'
license=('BSD-3-Clause')
depends=('networkmanager' 'pamac' 'univalent-logo' 'zenity' 'gksu')
opedepends=('pavucontrol' 'pavucontrol-qt')
source=(${pkgname}-${pkgver}.tar.gz::"${url}/archive/refs/tags/${pkgver}.tar.gz")
md5sums=('bc431c0b0063268913839e0fc9ad92fd')

package() {
  cd "${srcdir}/${pkgname}-${pkgver}/"
  make DESTDIR="$pkgdir" install
}
