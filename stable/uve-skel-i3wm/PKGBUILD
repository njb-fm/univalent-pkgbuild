# Maintainer: Hayate Nakamura (is01.njb at gmail dot com)
pkgname=uve-skel-i3wm
pkgbase=uve-skel
pkgver=23.07
pkgrel=1
pkgdesc="Settings for Uni3valent Versatile Environment"
arch=('any')
url="https://github.com/njb-fm/uve-skel"
license=('GPL3')
provides=('uve-skel')
conflicts=('uve-skel')
replaces=('uvgl-skel-i3wm' 'uvgl-skel-i3wm-ja' 'uvgl-skel-i3wm-en')
depends=('xfce4-terminal' 'pcmanfm-qt')
optdepends=('yay: an AUR helper'
            'neofetch: screenfetch utility'
            'cups: printing support'
            'system-config-printer: CUPS status applet')
options=(!strip !emptydirs)
source=("${pkgbase}-${pkgver}.tar.gz::${url}/archive/refs/tags/v${pkgver}.tar.gz")
md5sums=('1d87dece52da24122a350da973b57efa')

package() {
	install -dm755 ${pkgdir}/etc
	cp -r ${srcdir}/${pkgbase}-${pkgver}/i3wm/etc/* ${pkgdir}/etc
	chmod 755 ${pkgdir}/etc/skel/.config/polybar/launch.sh
}
