# Maintainer: Hayate Nakamura (is01.njb at gmail dot com)
pkgname=calamares-settings-univalent
destname="/etc"
pkgver=23.06.1
pkgrel=2
pkgdesc="Univalent Calamares Settings anf Branding"
arch=('any')
url="https://github.com/njb-fm/calamares-settings-univalent"
license=('GPL3')
makedepends=('git')
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${pkgname}::"git+${url}.git")
sha256sums=('SKIP')
package() {
	install -dm755 ${pkgdir}${destname}
	cp -r ${srcdir}/${pkgname}${destname}/* ${pkgdir}${destname}
	chmod 755 ${pkgdir}/etc/calamares/launch.sh
}
