# Maintainer: Hayate Nakamura (is01.njb at gmail dot com)
pkgname=calamares-settings-univalent
pkgver=23.07
pkgrel=2
pkgdesc="UVE Calamares Settings anf Branding"
arch=('any')
url="https://github.com/njb-fm/calamares-settings-univalent"
license=('GPL3' 'custom:njb-media')
makedepends=('git')
provides=("${pkgname}")
replaces=("univabootmnt")
options=(!strip !emptydirs)
source=(${pkgname}-${pkgver}.tar.gz::"${url}/archive/refs/tags/${pkgver}.tar.gz")
md5sums=('cdcb9953fc9ff1951b8aa38dabbc206f')

package() {
	cd ${srcdir}/${pkgname}-${pkgver}
	cp -r etc ${pkgdir}/etc
	cp -r usr ${pkgdir}/usr
	chmod 755 ${pkgdir}/etc/calamares/launch.sh
	chmod 755 ${pkgdir}/usr/bin/boot-mount
	mkdir -p ${pkgdir}/usr/share/licenses/${pkgname}
	cp MEDIA_GUIDELINE.md ${pkgdir}/usr/share/licenses/${pkgname}/
}
