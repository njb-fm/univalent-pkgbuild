# Maintainer: Hayate Nakamura (is01.njb at gmail dot com)
pkgname=("uvgl-skel-mate")
_pkgname=("uvgl-skel")
destname="/etc"
pkgver=23.05
pkgrel=1
pkgdesc="Settings for Munivalent GNU/Linux"
arch=('any')
url="https://github.com/njb-fm/uvgl-skel"
license=('GPL3')

depends=('mate-terminal' 'caja')

optdepends=('yay: an AUR helper'
            'unifetch: screenfetch utility'
            'cups: printing support'
            'system-config-printer: CUPS status applet')
conflicts=()
replaces=("${pkgname}-en" "${pkgname}-ja")
source=("${_pkgname}-${pkgver}.tar.gz::${url}/archive/refs/tags/v${pkgver}.tar.gz")
sha256sums=('81b2d249c19a494aa321d024475c1c22b199d07d1d187c6dfbf3f89aa16390e8')

package() {
	install -dm755 ${pkgdir}${destname}
	cp -r ${srcdir}/${_pkgname}-${pkgver}/mate${destname}/* ${pkgdir}${destname}
}
