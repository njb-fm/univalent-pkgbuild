# Maintainer: Hayate Nakamura (is01.njb at gmail dot com)
pkgname=("uvgl-skel-xfce-ja")
_pkgname=("uvgl-skel")
destname="/etc"
pkgver=23.02
pkgrel=2
pkgdesc="Settings for Xunivalent GNU/Linux"
arch=('any')
url="https://github.com/jin-asanami/uvgl-skel"
license=('GPL3')
makedepends=('git')

depends=('xfce4-terminal' 'thunar' 'fcitx5')

optdepends=('yay: an AUR helper'
            'unifetch: screenfetch utility'
            'cups: printing support'
            'system-config-printer: CUPS status applet')
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${_pkgname}-${pkgver}.tar.gz::${url}/archive/refs/tags/${pkgver}.tar.gz)
sha256sums=('08cf7f8d660998f33f9b9d477e43b4626e1a78ec6d24fa9e750bbb4fc4bc10c5')

package() {
	install -dm755 ${pkgdir}${destname}
	cp -r ${srcdir}/${_pkgname}-${pkgver}/cinnamon/ja${destname}/* ${pkgdir}${destname}
}
