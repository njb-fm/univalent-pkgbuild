# Maintainer: Hayate Nakamura (is01.njb at gmail dot com)
pkgname=("uvgl-skel-xfce-ja")
_pkgname=("uvgl-skel")
destname="/etc"
pkgver=23.03
pkgrel=1
pkgdesc="Settings for Xunivalent GNU/Linux"
arch=('any')
url="https://github.com/jin-asanami/uvgl-skel"
license=('GPL3')
makedepends=('git')

depends=('xfce4-terminal' 'thunar')

optdepends=('yay: an AUR helper'
            'unifetch: screenfetch utility'
            'cups: printing support'
            'system-config-printer: CUPS status applet')
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${_pkgname}-${pkgver}.tar.gz::${url}/archive/refs/tags/v${pkgver}.tar.gz)
sha256sums=('75f36f4c6f8a3707d3539561362815246bf310cc09166a47705d98ed1f6a3bdb')

package() {
	install -dm755 ${pkgdir}${destname}
	cp -r ${srcdir}/${_pkgname}-${pkgver}/xfce/ja${destname}/* ${pkgdir}${destname}
}
