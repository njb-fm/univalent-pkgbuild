# Maintainer: Hayate Nakamura (is01.njb at gmail dot com)
pkgname=calamares-settings-moevalent
_pkgname=uvgl-calam-cfg
destname="/etc"
pkgver=23.01
pkgrel=1
pkgdesc="Punivalent Calamares Settings anf Branding"
arch=('any')	
url="https://github.com/Jin-Asanami/uvgl-calam-cfg"
license=('GPL3')
makedepends=('git')
conflicts=('uvgl-calam-cfg')
replaces=("uvgl-moe-calam-cfg")
options=(!strip !emptydirs)
source=(${_pkgname}::"git+${url}.git")
sha256sums=('SKIP')
package() {
	install -dm755 ${pkgdir}${destname}
	cp -r ${srcdir}/${_pkgname}/lxqt-moe${destname}/* ${pkgdir}${destname}
	chmod 755 ${pkgdir}/etc/calamares/launch.sh
}
