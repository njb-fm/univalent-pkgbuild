# Maintainer: Hayate Nakamura (is01.njb at gmail dot com)
pkgname=("uvgl-skel-plasma-en")
destname="/etc"
pkgver=22.12
pkgrel=4
pkgdesc="Settings for Punivalent GNU/Linux"
arch=('x86_64')
url="https://github.com/jin-asanami"
license=('GPL3')
makedepends=('git')

depends=('konsole')

optdepends=('pcmanfm-qt: default file manager of Univalent Plasma Flavour'
            'yay: an AUR helper'
            'unifetch: screenfetch utility'
            'cups: printing support'
            'system-config-printer: CUPS status applet')
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(uvgl-skel::"git+${url}/uvgl-skel")
sha256sums=('SKIP')

package() {
	install -dm755 ${pkgdir}${destname}
	cp -r ${srcdir}/uvgl-skel/plasma/en${destname}/* ${pkgdir}${destname}
}
