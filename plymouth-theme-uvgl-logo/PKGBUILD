pkgname=plymouth-theme-uvgl-logo
_themename=uvgl-logo

pkgver=1.2
pkgrel=1
pkgdesc="A plymouth theme for Univalent GNU/Linux"
arch=('any')
url=https://osdn.net/projects/univalentgnulinux
_url=https://osdn.net/projects/univalentgnulinux/storage/aur/plymouth-theme-uvgl-logo
license=('GPL')
depends=('plymouth')
optdepends=()
source=("${_url}/${pkgname}-${pkgver}.tar.gz")
sha512sums=('40cb25879cf3383ed6a6860bbacc5cc6bd1c97017d6ae96dce6267614ddc77eb60043d3fae325b98a99407fddff023496be8e53bc2b4ad36319d5fd4ff1d0fe8')
conflicts=("${pkgname}-git")


build () {
    cd "${srcdir}"
    mkdir -p usr/share/plymouth/themes/${_themename}/
#    cp -r ${pkgname}/${_themename}/intro/* usr/share/plymouth/themes/${_themename}/
#    cp -r ${pkgname}/${_themename}/loop/* usr/share/plymouth/themes/${_themename}/
#    cp -r ${pkgname}/${_themename}/misc/* usr/share/plymouth/themes/${_themename}/
    cp -r ${pkgname}/${_themename}/* usr/share/plymouth/themes/${_themename}/
    rm -rf ${_themename}
}

package() {
    mkdir -p "$pkgdir"
    cp -r usr "$pkgdir"
}
