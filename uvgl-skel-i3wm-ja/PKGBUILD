# Maintainer: Hayate Nakamura (is01.njb at gmail dot com)
pkgname=("uvgl-skel-i3wm-ja")
_pkgname=("uvgl-skel")
destname="/etc"
pkgver=23.02.1
pkgrel=2
pkgdesc="Settings for Uni3valent GNU/Linux"
arch=('any')
url="https://github.com/jin-asanami/uvgl-skel"
license=('GPL3')

depends=('xfce4-terminal' 'pcmanfm-qt' 'lightdm')

optdepends=('yay: an AUR helper'
            'unifetch: screenfetch utility'
            'cups: printing support'
            'system-config-printer: CUPS status applet')
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)
source=("${_pkgname}-${pkgver}.tar.gz::${url}/archive/refs/tags/v${pkgver}.tar.gz"
	"0001-gnome-polkit-agent.patch")
sha256sums=('0be8c60dfbcc0cb54d5510af1172068a815a7d4e54b861cae4090bb8240392b0'
	'1d754b52dc0deb993421754ec4086444db9466f4b5cf950343637a497a2605d3')

prepare() {
	cd ${srcdir}/uvgl-skel-23.02.1
	patch -p1 -i ../0001-gnome-polkit-agent.patch
}

package() {
	install -dm755 ${pkgdir}${destname}
	cp -r ${srcdir}/${_pkgname}-${pkgver}/i3wm/ja${destname}/* ${pkgdir}${destname}
	chmod 755 ${pkgdir}${destname}/skel/.config/polybar/launch.sh
}
