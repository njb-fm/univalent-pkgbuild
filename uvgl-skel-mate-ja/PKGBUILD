# Maintainer: Hayate Nakamura (is01.njb at gmail dot com)
pkgname=("uvgl-skel-mate-ja")
destname="/etc"
pkgver=23.01
pkgrel=2
pkgdesc="Settings for Munivalent GNU/Linux"
arch=('any')
url="https://github.com/jin-asanami"
license=('GPL3')
makedepends=('git')

depends=('mate-terminal' 'caja')

optdepends=('yay: an AUR helper'
            'unifetch: screenfetch utility'
            'cups: printing support'
            'system-config-printer: CUPS status applet')
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(uvgl-skel::"git+${url}/uvgl-skel")
sha256sums=('SKIP')

package() {
	install -dm755 ${pkgdir}${destname}
	cp -r ${srcdir}/uvgl-skel/mate/ja${destname}/* ${pkgdir}${destname}
}
