#Maintainer: Hayate Naka-mura <is01.njb at gmail dot com>
pkgname=bluesky-gtk-theme-git
_pkgname=bluesky
pkgver=r172.785c390
pkgrel=1
pkgdesc="BlueSky theme for gtk2/3 and metacity"
arch=('any')
url="https://github.com/i-mint/bluesky"
license=('GPL3')
makedepends=('git')
source=("git+$url")
sha256sums=('SKIP')

pkgver() {
  cd "$_pkgname"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
    # init dirs
    install -d ${pkgdir}/usr/share/themes
    # copy all files to package
    cp -a ${srcdir}/${_pkgname}/BlueSky-* ${pkgdir}/usr/share/themes
}
