# Maintainer: Hayate Nakamura (is01.njb at gmail dot com)
pkgname=("uvgl-skel-cinnamon-ja")
_pkgname=("uvgl-skel")
destname="/etc"
pkgver=23.02.1
pkgrel=1.1
pkgdesc="Settings for Cunivalent GNU/Linux"
arch=('any')
url="https://github.com/jin-asanami/uvgl-skel"
license=('GPL3')

depends=('gnome-terminal' 'nemo')

optdepends=('yay: an AUR helper'
            'unifetch: screenfetch utility'
            'cups: printing support'
            'system-config-printer: CUPS status applet')
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${_pkgname}-${pkgver}.tar.gz::${url}/archive/refs/tags/v${pkgver}.tar.gz)
sha256sums=('0be8c60dfbcc0cb54d5510af1172068a815a7d4e54b861cae4090bb8240392b0')

package() {
	install -dm755 ${pkgdir}${destname}
	cp -r ${srcdir}/${_pkgname}-${pkgver}/cinnamon/ja${destname}/* ${pkgdir}${destname}
}
