# Maintainer: Hayate Nakamura (is01.njb at gmail dot com)
pkgname=("uvgl-skel-gnome-ja")
destname="/etc"
pkgver=23.02
pkgrel=1
pkgdesc="Settings for Gunivalent GNU/Linux"
arch=('any')
url="https://github.com/jin-asanami"
license=('GPL3')
makedepends=('git')

depends=('gnome-terminal' 'nautilus' 'fcitx5')

optdepends=('yay: an AUR helper'
            'unifetch: screenfetch utility'
            'cups: printing support'
            'system-config-printer: CUPS status applet')
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(uvgl-skel::"git+${url}/uvgl-skel"
	"environment.hook")
sha256sums=('SKIP'
	'f62a47816374b7f185df37d3f444d93dd0dc8027f79bcb2250f86df9df9dbe7a')

package() {
	install -dm755 ${pkgdir}${destname}
	cp -r ${srcdir}/uvgl-skel/gnome/ja${destname}/* ${pkgdir}${destname}
	mkdir -p ${pkgdir}/etc/pacman.d/hooks
	cp environment.hook ${pkgdir}/etc/pacman.d/hooks/
}
