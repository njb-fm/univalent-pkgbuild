# Maintainer: Hayyate Nakamura <is01.njb@gmail.com>

pkgname=univag-restricted-extras
pkgver=1.1
pkgrel=1
pkgdesc='Installer for restricted extra packages'
arch=('any')
url='https://github.com/Jin-Asanami/univag-restricted-extras'
license=('GPL3')
depends=('libdvdread' 'libdvdcss' 'libdvdnav' 'ttf-ms-fonts' 'gst-libav' "gst-plugins-ugly" "unrar")
makedepends=('git')
checkdepends=('shellcheck')

conflicts=("${pkgname}")
source=("git+https://github.com/Jin-Asanami/${pkgname}.git")
sha512sums=('SKIP')


package() {
  cd "${pkgname}"
  make DESTDIR="${pkgdir}/" PREFIX='/usr' install
}
