# Maintainer: Hayate Nakamura (is01.njb at gmail dot com)
pkgname=uvgl-calam-cfg
destname="/etc"
pkgver=23.01
pkgrel=1
pkgdesc="Calamares config for UVGL"
arch=('any')
url="https://github.com/Jin-Asanami"
license=('GPL3')
makedepends=('git')
conflicts=('uvgl-moe-calam-cfg')
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${pkgname}::"git+${url}/${pkgname}")
sha256sums=('SKIP')
package() {
	install -dm755 ${pkgdir}${destname}
	cp -r ${srcdir}/${pkgname}/old${destname}/* ${pkgdir}${destname}
	chmod 755 ${pkgdir}/etc/calamares/launch.sh
}
