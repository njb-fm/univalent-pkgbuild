# Maintainer: Hayate Nakamura (is01.njb at gmail dot com)
pkgname=("uvgl-skel-gnome-en")
_pkgname=("uvgl-skel")
destname="/etc"
pkgver=23.02
pkgrel=2.1
pkgdesc="Settings for Gunivalent GNU/Linux"
arch=('any')
url="https://github.com/jin-asanami/uvgl-skel"
license=('GPL3')

depends=('gnome-terminal' 'nautilus')

optdepends=('yay: an AUR helper'
            'unifetch: screenfetch utility'
            'cups: printing support'
            'system-config-printer: CUPS status applet')
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${_pkgname}-${pkgver}.tar.gz::${url}/archive/refs/tags/${pkgver}.tar.gz)
sha256sums=('4b31e691f261cd1006d641504238bab759f8813efeb83c90baf928dbf22654d7')

package() {
	install -dm755 ${pkgdir}${destname}
	cp -r ${srcdir}/${_pkgname}-${pkgver}/gnome/en${destname}/* ${pkgdir}${destname}
}
