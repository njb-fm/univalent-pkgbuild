# Maintainer: Hayate Nakamura (is01.njb at gmail dot com)
pkgname=("uvgl-skel-kylin-ja")
destname="/etc"
pkgver=22.11.10.a
pkgrel=1
pkgdesc="Settings for Kunivalent GNU/Linux"
arch=('x86_64')
url="https://github.com/jin-asanami"
license=('GPL3')
makedepends=('git')

depends=('lxterminal' 'peony')

optdepends=('yay: an AUR helper'
            'unifetch: screenfetch utility'
            'cups: printing support'
            'system-config-printer: CUPS status applet')
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(uvgl-skel::"git+${url}/uvgl-skel")
sha256sums=('SKIP')

package() {
	install -dm755 ${pkgdir}${destname}
	cp -r ${srcdir}/uvgl-skel/kylin/ja${destname}/* ${pkgdir}${destname}
}
